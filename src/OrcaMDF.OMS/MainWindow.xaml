<Window x:Class="OrcaMDF.OMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:OMS="clr-namespace:OrcaMDF.OMS"
		Title="OrcaMDF Studio" Height="350" Width="525">
	
	<DockPanel LastChildFill="True">
		<Menu IsMainMenu="True" DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="Open database..." InputGestureText="Ctrl+O" Command="OMS:UICommands.OpenDatabase" />
				<Separator />
				<MenuItem Header="Exit" Click="file_exit" />
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<TreeView Grid.Column="0" Name="treeview">
				<TreeView.Resources>
					<ContextMenu x:Key="TableContext">
						<MenuItem Header="Select Top 1000 Rows" Click="selectTop1000Rows" />
					</ContextMenu>
				</TreeView.Resources>
			</TreeView>
			<GridSplitter Width="2" />
			<DataGrid Grid.Column="1"></DataGrid>
		</Grid>
	</DockPanel>

	<Window.InputBindings>
		<KeyBinding Key="O" Modifiers="Control" Command="OMS:UICommands.OpenDatabase" />
	</Window.InputBindings>

	<Window.CommandBindings>
		<CommandBinding Command="OMS:UICommands.OpenDatabase" CanExecute="openDatabase_CanExecute" Executed="openDatabase" />
	</Window.CommandBindings>
</Window>
